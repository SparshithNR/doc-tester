#!/usr/bin/env node

const program = require('commander');
const pkg = require('../package.json');
const markDownTest = require('../index');
program
  .version(pkg.version)
  .option('-f, --file [pathToFile]','File needs to be tested', 'README.md')
  .option('-d, --debug [true | false]','Retain test file after execution')
  .option('--inspect [true | port]','Debug the test file.')
  .action(async () => {
    let { file, debug, inspect } = program;
    try {
      await markDownTest(file, /true|1/.test(debug), /true|1|\d/.test(inspect));
    } catch (err) {
      console.log(`Not all tests passed: ${err}`);
      process.exit(1);
    }
  });
program.parse(process.argv);